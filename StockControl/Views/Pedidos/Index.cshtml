@model List<Modelo.Models.Pedidos>
@{
    ViewBag.Title = "Pedidos";
}

<div class="d-flex flex-column" id="content-wrapper">
    <div>
        <h3 class="text-dark mb-1">Pedidos a proveedor</h3>
        <hr>
        <div class="row">
            <div class="col-3 d-flex justify-content-center">
                <div class="dropdown">
                    <button class="btn dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button">Selecciona Proveedor</button>
                    <div class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
                </div><button class="btn btn-secondary flex-row justify-content-center align-items-center align-content-center" type="button" data-bs-target="#modal-proveedor" data-bs-toggle="modal">Nuevo</button>
            </div>
            <div class="col-2 d-flex align-items-center"><span style="margin-right: 5px;">Desde</span><input type="date"></div>
            <div class="col-2 d-flex align-items-center"><span style="margin-right: 5px;">Hasta</span><input type="date"></div>
            <div class="col-2 d-flex align-items-center"><span style="margin-right: 5px;">N°Pedido</span><input type="text"></div>
            <div class="col-2" style="margin-right: 0px;margin-left: 35px;"><button class="btn btn-primary flex-row justify-content-center align-items-center align-content-center" type="button" data-bs-toggle="modal">Buscar</button></div>
        </div>
    </div>
    <div style="margin: 70px;margin-left: 20px;margin-top: 20px;">
        <h5>Detalle del pedido</h5>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>N° Pedido</th>
                        <th>Proveedor</th>
                        <th>Cantidad</th>
                        <th>Precio Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.pedido_cod</td>
                            <td>@item.proveedor_cod</td>
                            <td>@item.</td>
                            <td>$324232</td>
                            <td><a id="btn-edit" href="~/Pedidos/Pedido" data-bs-toggle="modal"><i class="fa fa-edit fs-4 text-primary"></i></a><a id="btn-delete" href="#" data-bs-target="#modal-confirmacion" data-bs-toggle="modal"><i class="fa fa-trash fs-4 text-danger" style="margin-left: 20px;"></i></a></td>
                        </tr>

                    }
                    <tr>
                        <td>codigo</td>
                        <td>prov</td>
                        <td>cantidad</td>
                        <td>$324232</td>
                        <td><a id="btn-edit" href="~/Pedidos/Pedido" data-bs-toggle="modal"><i class="fa fa-edit fs-4 text-primary"></i></a><a id="btn-delete" href="#" data-bs-target="#modal-confirmacion" data-bs-toggle="modal"><i class="fa fa-trash fs-4 text-danger" style="margin-left: 20px;"></i></a></td>
                    </tr>

                    <tr></tr>
                </tbody>
            </table>
        </div>
        <div class="row text-start">
            <div class="col">
                <hr>
            </div>
        </div>
        <div class="row d-flex flex-row">
            <div class="col d-flex justify-content-end align-items-end" style="margin: 0px;margin-right: 0px;"><button class="btn btn-info link-light d-flex flex-row" type="button">Imprimir pedido</button></div>
        </div>
    </div>
</div><a class="border rounded d-inline scroll-to-top" href="~/Pedidos/Pedido" style="background: rgba(90,92,105,0);margin-right: 155px;"><button class="btn btn-success fs-5 link-light" type="button" style="width: 195.078px;margin-right: 0px;" data-bs-toggle="modal">Nuevo Pedido</button></a>

<div class="modal fade" role="dialog" tabindex="-1" id="modal-confirmacion">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmación</h4><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Desea borrar el item?</p>
            </div>
            <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal">Cerrar</button><button class="btn btn-danger" type="button">Borrar</button></div>
        </div>
    </div>
</div>


