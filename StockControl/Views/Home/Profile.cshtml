<div class="modal fade" role="dialog" tabindex="-1" id="modal-usuario">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Usuario</h4><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card shadow mb-3">
                    <div class="card-header py-3"></div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3"><label class="form-label" for="username"><strong>Nombre</strong></label><input class="form-control" type="text" id="username" placeholder="-Nombre-" name="username"></div>
                                </div>
                                <div class="col">
                                    <div class="mb-3"><label class="form-label" for="email"><strong>Apellido</strong><br></label><input class="form-control" type="email" id="email" placeholder="-Apellido-" name="email"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3"><label class="form-label" for="first_name"><strong>Correo</strong></label><input class="form-control" type="text" id="first_name" placeholder="user@example.com" name="first_name"></div>
                                </div>
                                <div class="col">
                                    <div class="mb-3"><label class="form-label" for="first_name"><strong>Contraseña</strong></label><input class="form-control" type="text" id="first_name-1" placeholder="-password-" name="first_name"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label class="form-label" for="first_name"><strong>Rol</strong></label>
