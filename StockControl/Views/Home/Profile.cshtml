                                            <div class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="mb-3"><label class="form-label" for="last_name"><strong>Telefono</strong></label><input class="form-control" type="text" id="last_name-1" placeholder="Caracteristica + numero sin el 15" name="last_name"></div>
                                </div>
                            </div>
                            <div class="mb-3"></div>
